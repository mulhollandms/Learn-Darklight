{
  "manifest_version": 2,
  "name": "Learn Darklight",
  "version": "1.4.11",
  "author": "Modified by Michael Mulholland for uOttawa, original design by Zijian Shao",
  "background": {
    "persistent": false,
    "scripts": [
      "js/configs.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "24": "icon/icon24.png",
      "32": "icon/icon32.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "Learn Darklight"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/configs.js",
        "js/themes.js",
        "js/init.js"
      ],
      "matches": [
        "*://uottawa.brightspace.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/init_idle.js"
      ],
      "matches": [
        "*://uottawa.brightspace.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Learn Darklight offers multiple themes for uOttawa Brightspace.",
  "icons": {
    "128": "icon/icon128.png",
    "16": "icon/icon16.png",
    "48": "icon/icon48.png"
  },
  "offline_enabled": false,
  "options_page": "html/options.html",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "*://uottawa.brightspace.com/*"
  ],
  "short_name": "Learn Darklight",
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "icon/*",
    "img/*",
    "theme/*"
  ]
}
